<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">60</defaultcontrol>
    <controls>

        <control type="group">
            <visible>!Window.IsVisible(10147)</visible>

            <!-- === HEADER === -->
            <control type="label">
                <label>$LOCALIZE[31000]</label>
                <top>30</top>
                <left>80</left>
                <font>font_MainMenu</font>
            </control>

            <!-- === SIDE MENU === -->
            <control type="list" id="9000">
                <left>80</left>
                <top>120</top>
                <width>400</width>
                <height>900</height>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onleft>noop</onleft>
                <onright>60</onright>
                <orientation>vertical</orientation>
                <itemlayout height="70">
                    <control type="label">
                        <textoffsetx>20</textoffsetx>
                        <label>$INFO[ListItem.Label]</label>
                        <font>font13</font>
                    </control>
                </itemlayout>
                <focusedlayout height="70">
                    <control type="label">
                        <textoffsetx>20</textoffsetx>
                        <label>$INFO[ListItem.Label]</label>
                        <font>font13</font>
                        <textcolor>blue</textcolor>
                    </control>
                </focusedlayout>
                <content>
                    <item id="2">
                        <label>$LOCALIZE[31010]</label> <!-- Home -->
                    </item>
                    <item id="3">
                        <label>$LOCALIZE[31011]</label> <!-- Background -->
                    </item>
                    <item id="4">
                        <label>$LOCALIZE[31012]</label> <!-- Colors -->
                    </item>
                </content>
            </control>

            <!-- === PAGE CONTROL === -->
            <control type="scrollbar" id="60">
                <left>1820</left>
                <top>160</top>
                <height>720</height>
                <orientation>vertical</orientation>
                <showonepage>false</showonepage>
                <onleft>9000</onleft>
                <onright>noop</onright>
                <ondown>noop</ondown>
                <onup>noop</onup>
                <texturesliderbackground>scrollbar_background.png</texturesliderbackground>
                <texturesliderbar>scrollbar_bar.png</texturesliderbar>
                <texturesliderbarfocus>scrollbar_bar_focus.png</texturesliderbarfocus>
            </control>

            <!-- === HOME MENU SETTINGS === -->
            <control type="grouplist" id="610">
                <top>160</top>
                <left>500</left>
                <width>1200</width>
                <bottom>140</bottom>
                <onleft>9000</onleft>
                <onright>60</onright>
                <onup>610</onup>
                <ondown>610</ondown>
                <pagecontrol>60</pagecontrol>
                <visible>Container(9000).HasFocus(2)</visible>

                <!-- Regular Estuary settings -->
                <control type="radiobutton" id="621">
                    <label>$LOCALIZE[31008]</label>
                    <include>DefaultSettingButton</include>
                    <selected>!Skin.HasSetting(home_no_categories_widget)</selected>
                    <onclick>Skin.ToggleSetting(home_no_categories_widget)</onclick>
                </control>

                <control type="radiobutton" id="622">
                    <label>$LOCALIZE[31009]</label>
                    <include>DefaultSettingButton</include>
                    <selected>Skin.HasSetting(home_showvideos)</selected>
                    <onclick>Skin.ToggleSetting(home_showvideos)</onclick>
                </control>

                <control type="radiobutton" id="623">
                    <label>$LOCALIZE[31010]</label>
                    <include>DefaultSettingButton</include>
                    <selected>Skin.HasSetting(home_showmusic)</selected>
                    <onclick>Skin.ToggleSetting(home_showmusic)</onclick>
                </control>

                <!-- ‚ú® NEW BUTTONS ADDED HERE -->
                <control type="button" id="6210">
                    <label>üé® Customize Home Menu</label>
                    <include>DefaultSettingButton</include>
                    <visible>System.HasAddon(script.skinshortcuts)</visible>
                    <onclick>RunScript(script.skinshortcuts,type=manage)</onclick>
                </control>

                <control type="button" id="6211">
                    <label>‚¨áÔ∏è Install Home Menu Customizer</label>
                    <include>DefaultSettingButton</include>
                    <visible>!System.HasAddon(script.skinshortcuts)</visible>
                    <onclick>InstallAddon(script.skinshortcuts)</onclick>
                </control>
                <!-- ‚ú® END NEW BUTTONS -->

                <control type="radiobutton" id="617">
                    <label>$LOCALIZE[8]</label>
                    <include>DefaultSettingButton</include>
                    <selected>!Skin.HasSetting(HomeMenuNoWeatherButton)</selected>
                    <onclick>Skin.ToggleSetting(HomeMenuNoWeatherButton)</onclick>
                </control>
            </control>

            <!-- === BACKGROUND SETTINGS === -->
            <control type="grouplist" id="611">
                <top>160</top>
                <left>500</left>
                <width>1200</width>
                <bottom>140</bottom>
                <onleft>9000</onleft>
                <onright>60</onright>
                <onup>611</onup>
                <ondown>611</ondown>
                <pagecontrol>60</pagecontrol>
                <visible>Container(9000).HasFocus(3)</visible>

                <control type="radiobutton" id="631">
                    <label>$LOCALIZE[31021]</label>
                    <include>DefaultSettingButton</include>
                    <selected>Skin.HasSetting(background_fanart)</selected>
                    <onclick>Skin.ToggleSetting(background_fanart)</onclick>
                </control>
            </control>

            <!-- === COLORS SETTINGS === -->
            <control type="grouplist" id="612">
                <top>160</top>
                <left>500</left>
                <width>1200</width>
                <bottom>140</bottom>
                <onleft>9000</onleft>
                <onright>60</onright>
                <onup>612</onup>
                <ondown>612</ondown>
                <pagecontrol>60</pagecontrol>
                <visible>Container(9000).HasFocus(4)</visible>

                <control type="button" id="641">
                    <label>$LOCALIZE[31030]</label>
                    <include>DefaultSettingButton</include>
                    <onclick>Skin.SetString(color_theme,Blue)</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>
